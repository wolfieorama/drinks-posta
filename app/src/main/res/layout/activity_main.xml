<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:textAlignment="center"
    android:background="@drawable/tequila">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Drinks   Posta "
        android:id="@+id/textView"
        android:textColor="#fffffbfb"
        android:textSize="@dimen/abc_text_size_display_3_material"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="we send tips...y"
        android:id="@+id/textView2"
        android:textAlignment="center"
        android:textSize="@dimen/abc_text_size_display_1_material"
        android:fontFamily="@string/abc_search_hint"
        android:textColor="#fffbfdff"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:linksClickable="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Login with facebook"
        android:id="@+id/button"
        android:textSize="@dimen/abc_text_size_menu_material"
        android:textColor="#ff6831ff"
        android:background="#ff277aff"
        android:textColorHighlight="#fffffdfb"
        android:layout_below="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="80dp"
        android:clickable="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Login with twitter"
        android:id="@+id/button2"
        android:textSize="@dimen/abc_text_size_button_material"
        android:textColor="#ff6831ff"
        android:background="#ffa2b7ff"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="61dp"
        android:clickable="true"
        android:enabled="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Login"
        android:id="@+id/textView3"
        android:textSize="@dimen/abc_text_size_display_1_material"
        android:textColor="#fff5fcff"
        android:linksClickable="true"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
